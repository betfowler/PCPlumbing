@model PCPlumbing.Models.Images

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-md-10">
        <h2>Delete Image</h2>
    </div>
    <div class="col-md-2">
        <p>@Html.ActionLink("Log Out", "Logout", "Admins")</p>
    </div>
</div>



<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        @{
            if (Model.Image == Model.ImageBefore)
            {
                <dt>
                    <label for="remove"><b>Photo</b></label>
                </dt>
                <dd id="remove">
                    <img src="../../Content/Images/Gallery/@Model.Image" />
                </dd>
            }
            else
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd id="remove">
                    <img src="../../Content/Images/Gallery/@Model.Image" />
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ImageBefore)
                </dt>
                <dd id="remove">
                    <img src="../../Content/Images/Gallery/@Model.ImageBefore" />
                </dd>
            }
        }
        <dt>
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ImageName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Details")
        </div>
    }
</div>
